<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonsMainMenuStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintVertical_weight">1</item>
        <item name="layout_constraintHorizontal_weight">1</item>
    </style>

    <style name="ButtonsAnswerStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="layout_constraintVertical_weight">1</item>
        <item name="layout_constraintHorizontal_weight">1</item>
    </style>

    <style name="TextInfoStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextQuestionStyle" parent="TextInfoStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextHeaderStyle" parent="TextInfoStyle">
        <item name="android:textSize">36sp</item>
    </style>

</resources>