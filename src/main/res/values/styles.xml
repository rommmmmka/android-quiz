<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonsStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_percent">.6</item>
        <item name="layout_constraintVertical_weight">1</item>
        <item name="layout_constraintHorizontal_weight">1</item>
    </style>

    <style name="ButtonsMainMenuStyle" parent="ButtonsStyle">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="ButtonsAnswerStyle" parent="ButtonsStyle">
        <item name="layout_constraintWidth_percent">.8</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextInfoStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextQuestionStyle" parent="TextInfoStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextHeaderStyle" parent="TextInfoStyle">
        <item name="android:textSize">36sp</item>
    </style>

</resources>